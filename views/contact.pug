//- extends layout

block content
 .container
  form(method='post', action='contact')
   h1 Contact
   .form-group
    label firstName
    input.form-control(type='text', name='firstName', placeholder='Enter Name')
   .form-group
    label lastName
    input.form-control(type='text', name='lastName', placeholder='Enter Email')
    
   .form-group
    label Email
    input.form-control(type='text', name='email', placeholder='Enter Email')
   .form-group
    label Company
    input.form-control(type='text', name='company', placeholder='Enter Email')
   .form-group
    label PhoneNumber
    input.form-control(type='Number', name='phoneNumber', placeholder='Enter Email')
   
   
   button.btn.btn-default(type='submit') Submit